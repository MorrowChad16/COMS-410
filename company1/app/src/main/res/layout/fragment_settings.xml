<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/account_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    <EditText
            android:id="@+id/account_first_name"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/first_name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@null"
            android:enabled="false"
            tools:ignore="Autofill,LabelFor,TextFields" />

    <EditText
            android:id="@+id/account_first_name_dynamic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:background="@null"
            android:enabled="false"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:autofillHints="@string/first_name"
            android:inputType="text"
            tools:ignore="LabelFor" />

    <Button
            android:id="@+id/edit_first_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:background="@android:drawable/ic_menu_edit"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/account_last_name_dynamic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="40dp"
            android:background="@android:color/darker_gray" />

    <EditText
            android:id="@+id/account_second_name"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_below="@+id/account_first_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:text="@string/last_name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@null"
            android:enabled="false"
            tools:ignore="Autofill,LabelFor,TextFields" />

    <EditText
            android:id="@+id/account_last_name_dynamic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/account_first_name_dynamic"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:background="@null"
            android:enabled="false"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:autofillHints="@string/last_name"
            android:inputType="text"
            tools:ignore="LabelFor" />

    <Button
            android:id="@+id/edit_last_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="5dp"
            android:background="@android:drawable/ic_menu_edit"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/account_user_name_dynamic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="40dp"
            android:background="@android:color/darker_gray" />

    <EditText
            android:id="@+id/account_username"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_below="@+id/account_second_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:text="@string/username"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@null"
            android:enabled="false"
            tools:ignore="Autofill,LabelFor,TextFields" />

    <EditText
            android:id="@+id/account_user_name_dynamic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/account_last_name_dynamic"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:text="@string/username"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:background="@null"
            android:enabled="false"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:inputType="text"
            tools:ignore="Autofill,LabelFor"/>

    <Button
            android:id="@+id/edit_username"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="5dp"
            android:background="@android:drawable/ic_menu_edit"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/account_email_dynamic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="40dp"
            android:background="@android:color/darker_gray" />

    <EditText
            android:id="@+id/account_email"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_below="@+id/account_username"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:text="@string/email"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@null"
            android:enabled="false"
            tools:ignore="Autofill,LabelFor,TextFields" />

    <EditText
            android:id="@+id/account_email_dynamic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/account_user_name_dynamic"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@null"
            android:enabled="false"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:text="@string/email"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            tools:ignore="Autofill,LabelFor" />

    <Button
            android:id="@+id/edit_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="5dp"
            android:background="@android:drawable/ic_menu_edit"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/account_password"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="40dp"
            android:background="@android:color/darker_gray" />

    <TextView
            android:id="@+id/account_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/account_email_dynamic"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@null"
            android:paddingTop="11dp"
            android:text="@string/change_your_password"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    <ImageView
            android:id="@+id/password_arrow"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_below="@+id/account_email_dynamic"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription,PrivateResource" />

    <Button
            android:id="@+id/submit_account_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/submit_changes"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:layout_marginEnd="30dp"
            android:visibility="invisible"/>

    <Button
            android:id="@+id/payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/payment_history_text"
            android:paddingTop="15dp"
            android:text="@string/payment_method"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"/>

    <TextView
            android:id="@+id/payment_history_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/payment_history_arrow"
            android:paddingTop="15dp"
            android:text="@string/payment_history"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    <ImageView
            android:id="@+id/payment_history_arrow"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription,PrivateResource" />

</RelativeLayout>
    <TextView
            android:id="@+id/pop_up_message_student"
            android:layout_width="295dp"
            android:layout_height="189dp"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:text="popup_cancel_tutor"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="#F44336"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/viewStudentRecycler"
            app:layout_constraintEnd_toEndOf="@+id/viewStudentRecycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/appBarLayout" />

    <Button
            android:id="@+id/current_students_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_message_student"
            android:layout_alignStart="@id/pop_up_message_student"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:text="no"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/pop_up_message_student"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_message_student"
            app:layout_constraintHorizontal_bias="0.811"
            app:layout_constraintStart_toStartOf="@+id/pop_up_message"
            app:layout_constraintTop_toTopOf="@+id/pop_up_message"
            app:layout_constraintVertical_bias="0.843" />

    <Button
            android:id="@+id/current_students_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_up_message_student"
            android:layout_alignEnd="@id/pop_up_message_student"
            android:text="yes"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/pop_up_message_student"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_message_student"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintStart_toStartOf="@+id/pop_up_message_student"
            app:layout_constraintTop_toTopOf="@+id/pop_up_message_student"
            app:layout_constraintVertical_bias="0.829" />
